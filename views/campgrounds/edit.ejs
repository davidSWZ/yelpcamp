<% include ../partials/header %> 
<div class="container" style="width:30%">
    <h1 style="text-align:center">Edit <%=camp.name%>:</h1>
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name=campground[name] value="<%=camp.name%>" >
            </div>
            <div class="form-group">
                <input type="text" name=campground[image] class="form-control" value="<%=camp.image%>" >
            </div>
                <button class="btn btn-primary" >Send the new campground</button>
        </form>
    <a href="/">Go Back</a>
</div>

